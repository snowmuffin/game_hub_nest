# üåç Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ===========================================
# üóÑÔ∏è DATABASE CONFIGURATION
# ===========================================
DB_HOST=localhost
DB_PORT=5432
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=game_hub_db
DB_SSL=false

# ===========================================
# üîê JWT AUTHENTICATION
# ===========================================
JWT_SECRET=your_super_secret_jwt_key_here_change_this_in_production
JWT_EXPIRES_IN=7d

# ===========================================
# üéÆ STEAM AUTHENTICATION
# ===========================================
STEAM_API_KEY=your_steam_api_key_here
STEAM_RETURN_URL=http://localhost:4000/auth/steam/return

# ===========================================
# üåê SERVER CONFIGURATION
# ===========================================
NODE_ENV=development
PORT=4000
HOST=0.0.0.0

# Domain configuration
DOMAIN=localhost:4000
BASE_URL=http://localhost:4000

# ===========================================
# üîß CORS CONFIGURATION
# ===========================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Development and Production CORS origins (used as fallbacks)
DEV_CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:3001
PROD_CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Frontend URL for authentication callbacks
FRONTEND_URL=http://localhost:3000

# ===========================================
# üìù LOGGING CONFIGURATION
# ===========================================
LOG_LEVEL=debug
LOG_FILE=./logs/app.log
ERROR_LOG_FILE=./logs/error.log

# ===========================================
# üöÄ PRODUCTION SPECIFIC (override in .env.production)
# ===========================================
# NODE_ENV=production
# DB_SSL=true
# LOG_LEVEL=info
# DOMAIN=api.yourdomain.com
# BASE_URL=https://api.yourdomain.com
# CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
# FRONTEND_URL=https://yourdomain.com

# ===========================================
# üí∞ WALLET SYSTEM
# ===========================================
# Default currency settings
DEFAULT_CURRENCY_CODE=CREDITS
INITIAL_WALLET_BALANCE=1000

# ===========================================
# üéÆ GAME SERVERS
# ===========================================
# Space Engineers Server
SE_SERVER_HOST=localhost
SE_SERVER_PORT=27016

# Valheim Server
VALHEIM_SERVER_HOST=localhost
VALHEIM_SERVER_PORT=2456

# ===========================================
# üìß NOTIFICATION SETTINGS (Optional)
# ===========================================
# Email configuration (for future use)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

